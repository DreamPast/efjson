{
  "name": "efjson",
  "version": "0.8.0",
  "description": "a streaming and event-driven JSON parser (with support for JSON5 and JSONC)",
  "main": "dist/efjson.js",
  "types": "dist/efjson.d.ts",
  "type": "module",
  "keywords": [
    "json",
    "streaming",
    "event-driven",
    "json5",
    "jsonc"
  ],
  "author": "Jin Cai",
  "license": "MIT",
  "scripts": {
    "build": "rollup -c rollup.config.js",
    "gen_mjs": "uglifyjs dist/efjson.js --config-file uglifyjs.json --output dist/efjson.min.mjs --module",
    "build_mjs": "npm run build && npm run gen_mjs",
    "format_dist": "prettier -- --ignore-path --write dist/efjson.js \"dist/**/*.d.ts\"",
    "format": "prettier -- --write src/ test/ perf/",
    "test": "tsx --tsconfig ./test/tsconfig.json ./test/test.ts",
    "prepare": "npm run build_mjs"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^12.1.2",
    "prettier": "^3.5.3",
    "rollup": "^4.41.0",
    "rollup-plugin-license": "^3.6.0",
    "tslib": "^2.8.1",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "uglify-js": "^3.19.3"
  },
  "homepage": "https://github.com/DreamPast/efjson#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DreamPast/efjson.git"
  }
}